{
  "manifest_version": 3,
  "name": "LLM Response Copier",
  "version": "1.0",
  "description": "Copies LLM responses to the clipboard automatically.",
  "permissions": [
    "storage",
    "clipboardWrite",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "settings.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
